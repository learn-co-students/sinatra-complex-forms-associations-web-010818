<h1>Update Pet</h1>

<form action="/pets/<%=@pet.id%>" method="POST">
  <label>Name:</label>

  <br></br>

  <input id="pet_name"type="text" name="pet[name]" value="<%=@pet.name%>">

  <br></br>

  <label>Choose an existing owner:</label>

  <br></br>

  <% @owners.each do |owner| %>
    <input type="radio" name="owner[id]" value="<%=owner.id%>" id ="<%=owner.id%>"
    <%= 'checked' if owner.pets.include?(@pet) %>
    ><%=owner.name%></input>
  <% end %>

  <br></br>

  <label>and/or, create a new owner:</label>
  <br></br>
  <input type="text" id="owner_name"name="owner[name]"></input>
  <br></br>
  <input type="submit" value="Update Pet">
</form>
